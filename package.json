{
  "name": "qti-xml-core",
  "version": "0.1.3",
  "description": "Minimal, dependency-free helpers for parsing QTI 3.0 XML with DOMParser.",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/metyatech/qti-xml-core.git"
  },
  "homepage": "https://github.com/metyatech/qti-xml-core",
  "bugs": {
    "url": "https://github.com/metyatech/qti-xml-core/issues"
  },
  "keywords": [
    "qti",
    "qti3",
    "xml",
    "assessment",
    "parser"
  ],
  "engines": {
    "node": ">=18.18.0"
  },
  "type": "module",
  "exports": {
    ".": "./dist/index.js"
  },
  "types": "./dist/index.d.ts",
  "files": [
    "dist",
    "README.md",
    "LICENSE",
    "package.json"
  ],
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "test": "npm run build && node --test",
    "lint": "eslint .",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "typecheck": "tsc --noEmit",
    "verify": "npm run lint && npm run format:check && npm run typecheck && npm test",
    "prepack": "npm run build",
    "prepare": "husky"
  },
  "dependencies": {
    "@xmldom/xmldom": "^0.9.8"
  },
  "devDependencies": {
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "prettier": "^3.8.1",
    "typescript": "^5",
    "typescript-eslint": "^8.54.0"
  },
  "overrides": {
    "ajv": "^6.14.0",
    "minimatch": "^10.2.2"
  },
  "lint-staged": {
    "**/*.ts": [
      "prettier --check",
      "eslint"
    ],
    "*.{json,md}": [
      "prettier --check"
    ]
  }
}
